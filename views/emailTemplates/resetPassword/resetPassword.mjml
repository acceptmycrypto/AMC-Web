<mjml>
  <mj-body>

    <!-- Company Header -->
    <mj-section background-color="#6bd9c7">
      <mj-column>
        <mj-text font-size="20px" color="#626e7e" align="center">
          AcceptMyCrypto
        </mj-text>
        <mj-image width="80px" src="https://s3-us-west-1.amazonaws.com/acceptmycrypto/logo.png" />
      </mj-column>
    </mj-section>

    <!-- verifying section -->
    <mj-section background-color="#2e4157">

      <mj-column>
        <mj-text color="#fff" font-size="15px" align="center" line-height="20px">
          Please click the button to reset your password.
        </mj-text>
        <mj-button background-color="#F63A4D" href="<%=password_reset_link%>">
          Reset Password
        </mj-button>

      </mj-column>

    </mj-section>

  </mj-body>
</mjml>